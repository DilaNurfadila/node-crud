<form action="/" method="post">
  <label for="">Nama</label>
  <input type="text" name="nama" required />
  <br />

  <label for="">HP</label>
  <input type="text" name="nohp" required />
  <br />
  <button type="submit">Tambahkan</button>
</form>

<table border="1">
  <tr>
    <td>Nama</td>
    <td>Nomor HP</td>
    <td>Actions</td>
  </tr>

  <% kontak.forEach((kn, index) => { %>
  <tr>
    <td><%= kn.nama %></td>
    <td><%= kn.nohp %></td>
    <td>
      <a href="/<%= kn.id %>"><button>Detail</button></a>
      <a href="/<%= kn.id %>/edit"><button>Edit</button></a>
      <a href="/<%= kn.id %>/delete"><button>Delete</button></a>
    </td>
  </tr>
  <% }) %>
</table>
